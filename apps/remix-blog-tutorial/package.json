{
  "name": "@remix-fire-tutorial/remix-blog-tutorial",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "concurrently \"yarn:build:*\"",
    "build:remix": "remix build",
    "build:tw": "yarn tw -- --minify",
    "dev": "concurrently \"yarn:dev:*\"",
    "dev:remix": "PORT=3050 remix dev && yarn dev:tw",
    "dev:tw": "yarn tw --watch",
    "start": "remix-serve build",
    "tw": "tailwindcss -o app/styles/tailwind.css",
    "setup": "prisma migrate dev && prisma db seed"
  },
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "@remix-run/node": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "@remix-run/vercel": "^1.6.0",
    "@vercel/node": "^1.15.2",
    "bcryptjs": "^2.4.3",
    "marked": "^4.0.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "theme-change": "^2.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.0",
    "@remix-run/eslint-config": "^1.6.0",
    "@remix-run/serve": "^1.6.0",
    "@tailwindcss/typography": "^0.5.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "daisyui": "^2.15.4",
    "eslint": "^8.15.0",
    "postcss": "^8.4.14",
    "prisma": "^3.15.2",
    "tailwindcss": "^3.1.3",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} --transpile-only prisma/seed.ts"
  }
}
